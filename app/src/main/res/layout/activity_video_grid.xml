    android:id="@+id/main">

    <TextView
        android:id="@+id/gridTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages from Your Loved Ones ðŸ’•"
        android:textSize="22sp"
